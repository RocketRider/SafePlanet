<Window x:Class="SafePlanet.PasswordGenerator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" Height="238" Width="640">
    <Grid>
        <TextBox x:Name="allowedChars" Height="23" Margin="10,33,10,0" TextWrapping="Wrap" Text="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!%?" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
        <Label Content="allowed Characters" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PWLen" Height="23" Margin="10,87,10,0" TextWrapping="Wrap" Text="12" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
        <Label Content="Length of Password" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Password" Height="23" Margin="10,164,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,133,0,0" VerticalAlignment="Top"/>
        <Button Content="Geneerate" HorizontalAlignment="Left" Margin="75,136,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
